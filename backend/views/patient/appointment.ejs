<%- include('../partials/patient/header') %>
<!-- MAKE AN APPOINTMENT -->
<section id="appointment" data-stellar-background-ratio="3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-6">
        <!-- CONTACT FORM HERE -->
        <form
          id="appointment-form"
          role="form"
          method="post"
          action="/patient/appointmentbook"
        >
          <div class="section-title wow fadeInUp" data-wow-delay="0.8s">
            <h3>Hello <%=user.Fname%> <%=user.Lname%></h3>
          </div>

          <div class="wow fadeInUp" data-wow-delay="0.8s">
            <div class="col-md-6 col-sm-6">
              <label for="select"> <%= __("Select Specialization")%></label>
              <select
                name="specialization"
                class="form-control"
                placeholder="Specialization"
              >
                <% doctors.forEach(doctor => { %>
                <option><%=doctor.specialization%></option>
                <% }) %>
              </select>
              <!-- </div> -->
              <br />
              <!-- <div class="col-md-6 col-sm-6"> -->
              <label for="select"><%= __("Message")%>*</label>
              <br />
              <textarea
                name="message"
                id=""
                cols="74"
                rows="10"
                placeholder="Message"
              ></textarea>
              <br />
              <button type="submit" class="form-control" id="cf-submit">
                <%= __("Submit Button")%>
              </button>
              <br />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
