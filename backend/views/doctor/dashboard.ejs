<%- include('../partials/doctor/header') %>
<!-- HOME -->
<div class="container">
  <div class="row">
    <h1>DOCTOR DASHBOARD</h1>
    <section id="appointment" data-stellar-background-ratio="3">
      <div class="col-md-12 col-sm-6">
        <div class="wow fadeInUp" data-wow-delay="0.8s">
          <div class="col-md-3 col-sm-3">
            <a href="/doctor/profile">
              <button type="submit" class="form-control" id="cf-submit">
                My profile
              </button>
            </a>
          </div>
          <div class="col-md-3 col-sm-3">
            <a href="/doctor/emailchange">
              <button type="submit" class="form-control" id="cf-submit">
                Change Email
              </button>
            </a>
          </div>
          <div class="col-md-3 col-sm-3">
            <a href="/doctor/passwordchange">
              <button type="submit" class="form-control" id="cf-submit">
                Change Password
              </button>
            </a>
          </div>
          <div class="col-md-3 col-sm-3">
            <a href="/doctor/appointments">
              <button type="submit" class="form-control" id="cf-submit">
                All Appointments
                <span class="badge badge-light"
                  ><%= appointments.length %></span
                >
              </button>
            </a>
          </div>
          <div class="col-md-3 col-sm-3">
            <a href="/doctor/prescriptions">
              <button type="submit" class="form-control" id="cf-submit">
                Prescriptions
              </button>
            </a>
          </div>
          <!-- <div class="col-md-3 col-sm-3">
            <a href="/doctor/inpatientslist">
              <button type="submit" class="form-control" id="cf-submit">
                Inpatients
              </button>
            </a>
          </div> -->
        </div>
      </div>
    </section>
  </div>
</div>
<%- include('../partials/footer') %>
