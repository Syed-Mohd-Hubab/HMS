<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <br>
            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h2 class="panel-title">Showing Details:</h2>
                  </div>
                </div>
              </div>

              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <!-- <th><em class="fa fa-cog"></em></th> -->
                        <th>#</th>
                        <th>Appointment done on</th>
                        <th>Patient Name</th>
                        <th>Disease</th>
                        <th>Treatment</th>
                        <th>Inpatient ?</th>
                        <th>Description( If inpatient)</th>
                    </tr>
                  </thead>
                  <tbody>
                        <% row.forEach((row, i) => { %>
                          <tr>
                            <td><%=i+1 %></td>
                            <td><%=row.Appointment_Time.toString().slice(0, 24) %></td>
                            <td><%=row.Pname %></td>
                            <td><%=row.Disease %></td>
                            <td><%=row.Treatment %></td>
                            <% if(row2.length==0) {%>
                              <td> Neither In nor Out
                                  <button type="button" class="btn btn-default">
                                      <a href="/doctor/inpatient/<%=row.Appointment_id%>">Assign inpatient</a>
                                  </button>
                              </td>
                            <% } else if(row2[0].TimeIn!=null && row2[0].TimeOut==null) { %>
                                <td>Yes, Inpatient</td>
                            <% } else if (row2[0].TimeIn!=null && row2[0].Fee>0) { %>
                                <td>No, Outpatient</td>
                            <% } %>
                            <% if(row2.length==0) {%>
                              <td>None</td>
                            <% } else { %>
                              <td><%=row2[0].Descript %></td>
                            <% } %>
                          </tr>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 